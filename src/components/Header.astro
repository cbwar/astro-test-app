---
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<header
    class="flex flex-col items-center flex-no-wrap p-3 archivo-black dark-bg text-white"
>
    <div class="text-center">
        <a href="/">
            <h1 class="flex flex-col md:flex-row text-4xl">
                <span>{title}</span>
            </h1>
        </a>
    </div>
    <div>
        <a
            class="text-blue-500 hover:text-orange-500 text-3xl mr-4"
            href="https://github.com/cbwar/astro-test-app"
            title="Github"
            target="_blank"
        >
            <span class="fab fa-github"></span>
        </a>
    </div>
</header>

<style lang="scss">
    .malt-icon {
        height: 1.875rem;
        fill: #4299e1;
        display: inline-block;
        width: 1.875rem;
        margin-top: -5px;

        &:hover {
            fill: #ed8936;
        }
    }
</style>
